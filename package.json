{
	"name": "@thothom/core",
	"version": "0.0.1",
	"main": "index.js",
	"types": "index.d.ts",
	"license": "Apache-2.0",
	"author": "Techmmunity",
	"description": "ThothOM - The Ultimate OM For All Databases",
	"homepage": "https://thothom.com/",
	"bugs": {
		"url": "https://github.com/thothom/core/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/thothom/core.git"
	},
	"keywords": [
		"orm",
		"odm",
		"sql",
		"nosql",
		"dynamo",
		"dynamodb",
		"typeorm",
		"typescript",
		"database",
		"data-mapper",
		"object-mapper",
		"thothom"
	],
	"peerDependencies": {
		"reflect-metadata": "^0.1.13",
		"uuid": "^8.3.2"
	},
	"peerDependenciesMeta": {
		"uuid": {
			"optional": true
		}
	},
	"dependencies": {
		"@techmmunity/utils": "^1.9.1",
		"change-case": "^4.1.2",
		"dayjs": "^1.10.6",
		"tiny-glob": "^0.2.9"
	},
	"devDependencies": {
		"@techmmunity/eslint-config": "^5.2.2",
		"@types/jest": "^27.0.2",
		"@types/uuid": "^8.3.4",
		"@vercel/ncc": "^0.33.2",
		"eslint": "^8.9.0",
		"husky": "^7.0.2",
		"jest": "^27.5.1",
		"lint-staged": "^12.3.3",
		"prettier": "^2.5.1",
		"reflect-metadata": "^0.1.13",
		"ts-jest": "^27.1.3",
		"ts-node": "^10.5.0",
		"typescript": "^4.5.5",
		"uuid": "^8.3.2"
	},
	"scripts": {
		"prepare": "husky install",
		"ts-node": "ts-node",
		"test": "jest",
		"test:cov": "jest --coverage",
		"build": "ncc build src/index.ts -o dist -s -m -e reflect-metadata -e uuid -e change-case -e dayjs -e tiny-glob -e @techmmunity/utils",
		"build:dev": "ncc build src/index.ts -o dist -s -m",
		"format": "eslint . --fix --quiet",
		"lint": "eslint . --quiet",
		"upgrade:dependencies": "yarn upgrade-interactive --latest",
		"husky:pre-commit": "tsc && lint-staged",
		"lk": "yarn build:dev && cp package.json dist/package.json && cd dist && yarn link && cd ..",
		"ulk": "yarn unlink && yarn lk"
	}
}
